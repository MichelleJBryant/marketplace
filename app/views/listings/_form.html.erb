  <%= form_with(model: listing, local: true) do |form| %>
    <% if listing.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(listing.errors.count, "error") %> prohibited this listing from being saved:</h2>
        <ul>
        <% listing.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  <div class="row">
    <div class="col-md-8">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>
    </div>

    <div class="col-md-4">
        <%= form.label :price %>
        <div class="input-group">
          <div class="input-group-prepend">
              <div class="input-group-text">$AUD</div>
          </div>
          <%= form.text_field :price, class: 'form-control' %>
        </div>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <div class="field my-4">
          <%= form.label :image %>
          <%= form.file_field :image, class: 'p-3 h-100 bg-light form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <div class="form-group">
        <%= form.label :subject %>
        <%= form.select :subject, options_for_select(subjects_helper), {}, class: 'form-control' %>
      </div>
    </div>

    <div class="col">
      <div class="form-group">
        <%= form.label :grade %>
        <%= form.select :grade, options_for_select(grades_helper), {}, class: 'form-control' %>
      </div>
    </div>

    <div class="col">
      <div class="form-group">
        <%= form.label :resource_type, 'Type' %>
        <%= form.select :resource_type, options_for_select(resource_helper), {}, class: 'form-control' %>
      </div>
    </div>


  </div>

    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>

    <div class="actions">
      <%= form.submit class: 'btn btn-success' %>
    </div>
  <% end %>
